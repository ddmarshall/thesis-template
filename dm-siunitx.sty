\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{dm-siunitx}[2024-04-04 Initial Release]

\RequirePackage{siunitx}     % number formatting and units
\sisetup{
    per-mode = fraction,
    group-digits = integer,
    group-separator = {,},
    group-minimum-digits = 5,
    input-digits = 0123456789\pi
}

% Custom units
%   length
\DeclareSIUnit{\inch}{in}
\DeclareSIUnit{\feet}{ft}
\DeclareSIUnit{\foot}{ft}
\DeclareSIUnit{\mile}{mi}
\DeclareSIUnit{\yard}{yd}
\DeclareSIUnit{\nauticalmile}{nmi}

%   temperature
% see https://tex.stackexchange.com/a/709701/79979
\DeclareSIUnit[]{\fahrenheit}{^\circ\text{F}}
\DeclareSIUnit[]{\rankine}{^\circ\text{R}}
\DeclareSIUnit[]{\celsius}{\degreeCelsius}

%   velocity
\DeclareSIUnit{\milesperhour}{mph}
\DeclareSIUnit{\feetpersecond}{fps}
\DeclareSIUnit{\knot}{kt}

%   mass
\DeclareSIUnit{\poundmass}{lb\textsubscript{m}}
\DeclareSIUnit{\slug}{slug}

%   force
\DeclareSIUnit{\poundforce}{lb\textsubscript{f}}

%   pressure
\DeclareSIUnit{\atmosphere}{atm}
\DeclareSIUnit{\bar}{bar}
\DeclareSIUnit{\psia}{psia}
\DeclareSIUnit{\psig}{psig}
\DeclareSIUnit{\psi}{psi}
\DeclareSIUnit{\torr}{torr}

%   viscosity
\DeclareSIUnit{\stokes}{St}
\DeclareSIUnit{\poise}{P}

%   energy
\DeclareSIUnit{\btu}{BTU}

%  power
\DeclareSIUnit{\horsepower}{hp}
\DeclareSIUnit{\horsepowermetric}{hp\textsubscript{metric}}

%   volumetric flow rate
\DeclareSIUnit{\cfm}{CFM}

\endinput
